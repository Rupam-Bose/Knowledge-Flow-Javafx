<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<AnchorPane prefHeight="800.0" prefWidth="800.0" style="-fx-background-color: #fefefe;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.knowlwdgeflow.Controllers.mainProfile_Controller">
    <children>
        <VBox spacing="16.0" AnchorPane.leftAnchor="24.0" AnchorPane.rightAnchor="24.0" AnchorPane.topAnchor="24.0">
            <children>
                <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #0f172a;" text="My profile" />
                <VBox alignment="CENTER" spacing="12.0" style="-fx-background-color: #ffffff; -fx-background-radius: 16; -fx-padding: 20 24; -fx-effect: dropshadow(gaussian, rgba(15,23,42,0.08), 12, 0, 0, 4);">
                    <children>
                        <ImageView fx:id="profileImageView" fitHeight="170.0" fitWidth="170.0" preserveRatio="true" smooth="true" />
                        <Button fx:id="uploadButton" mnemonicParsing="false" style="-fx-background-color: #e0e7ff; -fx-text-fill: #1d4ed8; -fx-background-radius: 10; -fx-padding: 8 14;" text="Upload image" />
                        <Label fx:id="nameLabel" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #0f172a;" text="Name" />
                        <Label fx:id="emailLabel" style="-fx-text-fill: #475569; -fx-font-size: 13px;" text="Email" />
                        <HBox alignment="CENTER" spacing="10.0">
                            <padding>
                                <Insets top="10.0" />
                            </padding>
                            <children>
                                <Button fx:id="homeButton" style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-background-radius: 10; -fx-padding: 10 14;" text="Home" />
                                <Button fx:id="questionsButton" style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-background-radius: 10; -fx-padding: 10 14;" text="Questions and Answers" />
                                <Button fx:id="askQuestionButton" mnemonicParsing="false" style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-background-radius: 10; -fx-padding: 10 14;" text="Ask Questions" />
                                <Button style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-background-radius: 10; -fx-padding: 10 14;" text="Bookmarks" />
                                <Button fx:id="writingBlogButton" style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-background-radius: 10; -fx-padding: 10 14;" text="Writing Blog" />
                                <Button fx:id="logoutButton" style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-background-radius: 10; -fx-padding: 10 14;" text="Logout" />
                            </children>
                        </HBox>
                    </children>
                    <fx:define>
                        <Circle fx:id="clipCircle" radius="85.0" />
                    </fx:define>
                </VBox>
            </children>
            <padding>
                <Insets bottom="24.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
