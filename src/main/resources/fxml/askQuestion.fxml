<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<?import javafx.scene.image.Image?>
<?import javafx.scene.control.Separator?>
<AnchorPane fx:id="rootPane" prefHeight="800.0" prefWidth="1100.0" style="-fx-background-color: #fefefe;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.knowlwdgeflow.Controllers.askQuestion_Controller">
    <children>
        <HBox AnchorPane.topAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0">
            <!-- Side menu -->
            <VBox prefWidth="240" spacing="14" style="-fx-background-color: linear-gradient(to bottom, #2f6ad9, #1d4fa3); -fx-padding: 24; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.18), 16, 0, 0, 2);">
                <children>
                    <HBox alignment="CENTER_LEFT" spacing="12">
                        <children>
                            <ImageView fx:id="profileImageView" fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="false">
                                <image>
                                    <Image url="@../Images/knowledgeflowlogo.png" />
                                </image>
                                <clip>
                                    <Circle fx:id="profileClip" centerX="20.0" centerY="20.0" radius="20.0" />
                                </clip>
                            </ImageView>
                            <Label text="Menu" style="-fx-text-fill: white; -fx-font-size: 18; -fx-font-weight: bold;" />
                        </children>
                    </HBox>
                    <Separator opacity="0.35" />
                    <Button text="My Profile" onAction="#handleProfileClick" style="-fx-background-color: rgba(255,255,255,0.12); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 10 12; -fx-border-color: rgba(255,255,255,0.25); -fx-border-radius: 10;" />
                    <Button text="Home" onAction="#handleHome" style="-fx-background-color: rgba(255,255,255,0.12); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 10 12; -fx-border-color: rgba(255,255,255,0.25); -fx-border-radius: 10;" />
                    <Button text="Writing Blog" onAction="#handleWritingBlog" style="-fx-background-color: rgba(255,255,255,0.12); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 10 12; -fx-border-color: rgba(255,255,255,0.25); -fx-border-radius: 10;" />
                    <Button text="Ask Question" onAction="#handleAskQuestion" style="-fx-background-color: rgba(255,255,255,0.12); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 10 12; -fx-border-color: rgba(255,255,255,0.25); -fx-border-radius: 10;" />
                    <Button text="Answers and Questions" onAction="#handleAllQuestions" style="-fx-background-color: rgba(255,255,255,0.12); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 10 12; -fx-border-color: rgba(255,255,255,0.25); -fx-border-radius: 10;" />
                    <Button text="Bookmarks" onAction="#handleBookmarks" style="-fx-background-color: rgba(255,255,255,0.12); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 10 12; -fx-border-color: rgba(255,255,255,0.25); -fx-border-radius: 10;" />
                    <Region VBox.vgrow="ALWAYS" />
                    <Button text="Logout" onAction="#handleLogout" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 10 12; -fx-border-color: rgba(255,255,255,0.35); -fx-border-radius: 10;" />
                </children>
            </VBox>

            <!-- Main content -->
            <VBox spacing="24.0" style="-fx-padding: 24;" HBox.hgrow="ALWAYS">
                <children>
                    <HBox alignment="CENTER_LEFT" spacing="12.0">
                        <children>
                            <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #0f172a;" text="Ask Question" />
                            <Region HBox.hgrow="ALWAYS" />
                        </children>
                    </HBox>
                    <HBox alignment="CENTER">
                        <children>
                            <ImageView fx:id="questionImageView" fitHeight="260.0" fitWidth="583.0" pickOnBounds="true" preserveRatio="true" smooth="true" />
                        </children>
                    </HBox>
                    <VBox spacing="12.0" style="-fx-background-color: #ffffff; -fx-background-radius: 12; -fx-padding: 20 20 24 20; -fx-effect: dropshadow(gaussian, rgba(15,23,42,0.06), 10, 0, 0, 4);">
                        <children>
                            <Label style="-fx-text-fill: #475569; -fx-font-weight: bold;" text="Your question" />
                            <TextField fx:id="questionField" promptText="Type your question here" focusTraversable="false" />
                            <Button fx:id="askNowButton" mnemonicParsing="false" style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-background-radius: 10; -fx-padding: 10 14;" text="Ask now" />
                        </children>
                    </VBox>
                </children>
                <padding>
                    <Insets top="4.0" />
                </padding>
            </VBox>
        </HBox>
    </children>
</AnchorPane>
